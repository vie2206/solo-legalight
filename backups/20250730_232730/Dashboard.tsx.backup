                      >
                        Modify Schedule
                      </button>
                      <button 
                        className="w-full px-4 py-3 rounded-2xl font-semibold border-2 hover:bg-gray-50 transition-all duration-200"
                        style={{ borderColor: '#363535', color: '#363535' }}
                      >
                        Export Calendar
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}
          
          {/* Practice Sessions View */}
          {currentView === 'practice' && (
            <div className="space-y-6">
              <div className="bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
                <div className="flex items-center justify-between mb-6">
                  <div>
                    <h2 className="text-2xl font-bold" style={{ color: '#363535' }}>Practice Sessions</h2>
                    <p className="text-gray-500 mt-1">Targeted practice for skill improvement</p>
                  </div>
                  <div className="p-3 rounded-2xl" style={{ backgroundColor: '#90EE90' }}>
                    <AcademicCapIcon className="w-6 h-6" style={{ color: '#363535' }} />
                  </div>
                </div>
                
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                  {[
                    { 
                      title: 'Reading Speed Challenge', 
                      description: '10 passages, 30 minutes', 
                      difficulty: 'Intermediate', 
                      type: 'Timed Practice', 
                      color: '#87CEEB',
                      completed: true,
                      score: 85
                    },
                    { 
                      title: 'Legal Reasoning Drills', 
                      description: '25 questions, mixed topics', 
                      difficulty: 'Advanced', 
                      type: 'Topic Focus', 
                      color: '#F4A460',
                      completed: false,
                      score: null
                    },
                    { 
                      title: 'Logic Puzzles', 
                      description: '15 complex problems', 
                      difficulty: 'Expert', 
                      type: 'Problem Solving', 
                      color: '#87CEFA',
                      completed: false,
                      score: null
                    },
                    { 
                      title: 'GK Quick Fire', 
                      description: '50 questions, 15 minutes', 
                      difficulty: 'Beginner', 
                      type: 'Speed Round', 
                      color: '#90EE90',
                      completed: true,
                      score: 92
                    },
                    { 
                      title: 'Math Concepts', 
                      description: '20 quantitative problems', 
                      difficulty: 'Intermediate', 
                      type: 'Concept Building', 
                      color: '#FFB6C1',
                      completed: false,
                      score: null
                    },
                    { 
                      title: 'Previous Year Mix', 
                      description: '30 questions from past papers', 
                      difficulty: 'Advanced', 
                      type: 'Real Exam Prep', 
                      color: '#ffdd6d',
                      completed: false,
                      score: null
                    }
                  ].map((practice, idx) => (
                    <div key={idx} className="p-6 rounded-2xl border border-gray-200 hover:border-yellow-300 transition-all duration-200">
                      <div className="flex items-center justify-between mb-4">
                        <div className="w-4 h-4 rounded-full" style={{ backgroundColor: practice.color }}></div>
                        {practice.completed && (
                          <span 
                            className="px-2 py-1 text-xs font-medium rounded-full"
                            style={{ backgroundColor: '#90EE90', color: '#363535' }}
                          >
                            Completed
                          </span>
                        )}
                      </div>
                      
                      <h3 className="font-bold text-lg mb-2" style={{ color: '#363535' }}>{practice.title}</h3>
                      <p className="text-sm text-gray-600 mb-4">{practice.description}</p>
                      
                      <div className="space-y-2 mb-4">
                        <div className="flex justify-between text-sm">
                          <span className="text-gray-600">Type:</span>
                          <span style={{ color: '#363535' }}>{practice.type}</span>
                        </div>
                        <div className="flex justify-between text-sm">
                          <span className="text-gray-600">Level:</span>
                          <span 
                            className="px-2 py-1 text-xs font-medium rounded-full"
                            style={{ backgroundColor: practice.color, color: '#363535' }}
                          >
                            {practice.difficulty}
                          </span>
                        </div>
                        {practice.score && (
                          <div className="flex justify-between text-sm">
                            <span className="text-gray-600">Best Score:</span>
                            <span className="font-bold" style={{ color: '#363535' }}>{practice.score}%</span>
                          </div>
                        )}
                      </div>
                      
                      <div className="flex space-x-2">
                        {!practice.completed ? (
                          <button 
                            className="flex-1 px-4 py-2 rounded-2xl font-semibold text-white hover:opacity-90 transition-all duration-200"
                            style={{ backgroundColor: '#363535' }}
                          >
                            Start Practice
                          </button>
                        ) : (
                          <>
                            <button 
                              className="flex-1 px-4 py-2 rounded-2xl font-semibold border-2 hover:bg-gray-50 transition-all duration-200"
                              style={{ borderColor: '#363535', color: '#363535' }}
                            >
                              Review
                            </button>
                            <button 
                              className="flex-1 px-4 py-2 rounded-2xl font-semibold text-white hover:opacity-90 transition-all duration-200"
                              style={{ backgroundColor: '#fb5053' }}
                            >
                              Retry
                            </button>
                          </>
                        )}
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          )}
          
          {/* Other views placeholder */}
          {!['dashboard', 'ai-planner', 'test-analysis', 'insights', 'vocabulary', 'tests', 'analytics', 'schedule', 'practice'].includes(currentView) && (
            <div className="text-center py-12">
              <p className="text-gray-500">
                {currentView.charAt(0).toUpperCase() + currentView.slice(1)} view coming soon...
              </p>
            </div>
          )}
        </div>
      </main>
    </div>
  )
}

export default Dashboard